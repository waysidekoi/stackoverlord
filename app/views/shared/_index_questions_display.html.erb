<div class="question-bar">
  <div class="vav-display">

    <div class="votes">
      <div class="mini-counts"><%= question.votes.count %></div>
      <span>votes</span>
    </div>

    <div class="answers">
      <div class="mini-counts"><%= question.answers.count %></div>
      <span>answers</span>
    </div>

    <div class="views">
      <div class="mini-counts">N/A</div>
      <span>views</span>
    </div>

  </div>

  <div class="title-display">
    <h3>
      <%= link_to question.title, question_path(question) %>
    </h3>

    <div class="author">
      <ul>
        <li class="post-time"><%= question.created_at %></li>
        <li class="alias"><%= question.user.alias if question.user %></li>
        <li class="reputation"><%= question.user.reputation if question.user %></li>
      </ul>
    </div>
  </div>
</div>
<hr>
