<h3>Your Answer</h3>
<%= form_tag answers_path %>
<%= hidden_field_tag :question_id, :id, value: question.id %>
<%= text_area_tag :details %>

<% if question.user_id == current_user.id %>
<%= button_to "Answer Your Question", { :action => "create" } %>
<% else %>
<%= button_to "Post Your Answer", { :action => "create" } %>
<% end %>
