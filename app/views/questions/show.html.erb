<%= render partial: "shared/errors_display" %>

<div class="title">
  <h3>
    <%= @question.title %><br>
  </h3>
</div>
<hr>



<div class="answer_details_etc">
  <%= render partial: "shared/voting_arrows", locals: { object: @question } %>

  <div class="details"><%= @question.details %></div>  

</div>

  <div class="answers-subheader">
    <h3>
      <%= @answers.count %> Answers
    </h3>
  </div>
  <hr>
  <% @answers.each do |answer| %>
    <%= render :partial => "shared/voting_arrows", locals: { object: answer } %>
    <%= render :partial => "shared/answer_display", locals: { answer: answer } %>
  <% end %>
    <%= render :partial => "shared/answer_form", locals: { question: @question } %>

